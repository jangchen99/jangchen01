<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/chat_all_lo"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:gravity="right"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="15dp"
    android:layout_marginEnd="15dp">
    <!--대화창 하나만 뜰때는 height를 wrap으로 하는거 생각하기-->

    <LinearLayout
        android:id="@+id/chat_date1_lo"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="10dp"
        android:gravity="bottom">

        <TextView
            android:id="@+id/chat_date1_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#80000000"
            android:textSize="13dp"
            android:text="7:48 AM"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/chat_chat_lo"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/speech_bubble_outgoing"
        android:orientation="vertical"
        android:paddingStart="15dp"
        android:paddingTop="10dp"
        android:paddingEnd="25dp"
        android:paddingBottom="10dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/chat_content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:text=""
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/chat_writer_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="13dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/chat_date2_lo"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:gravity="bottom">

        <TextView
            android:id="@+id/chat_date2_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#80000000"
            android:textSize="13dp"
            android:text="7:48 AM"/>

    </LinearLayout>

</LinearLayout>